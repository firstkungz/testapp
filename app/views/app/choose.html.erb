<script>
    $( "div[index]").hover(
        function() {
            var obj = $(this).find("div[name='option']:first");
            obj.fadeIn(200);
            //obj.css('display','');


            obj.find("div[tool='edit']").hover(function(){
                $(this).tooltip('show');
            },function(){
                $(this).tooltip('hide');
            });
            obj.find("div[tool='delete']").hover(function(){
                $(this).tooltip('show');
            },function(){
                $(this).tooltip('hide');
            });
        }, function() {
            var obj = $(this).find("div[name='option']:first")
            //obj.css('display','none');
            obj.fadeOut(200);
        });
</script>	
<% end%>

