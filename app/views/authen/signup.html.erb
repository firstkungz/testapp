<% content_for :body do %>
	<div class="login-box">
	<%= form_for :post do |f| %>
		<% flash.each do |name, msg| -%>
      	<%= content_tag :div, msg, class: name %>
    	<% end %>		

    	<div style="color:white"><h4>Enter all information</h4><br></div>
    	<%= f.text_field :username ,:class => "form-control fazilai-textform",:placeholder => "e-mail" %><br>
    	<%= f.password_field :password ,:class => "form-control fazilai-textform",:placeholder => "password"%><br>
	<%= f.password_field :repassword ,:class => "form-control fazilai-textform",:placeholder => "re-password"%><br>
	<div style="color:white"><%= f.check_box	:agree,:value=>"yes" %>
	Agree terms of services</div><br>
		<%= f.submit :"sign up" , :class => "form-control fazilai-login btn-warning" , :style => "display:inline"%> 
		<br>
		<br>
		<div style="width:300px;height:3px;background:white"><div>
	</div>
	<% end %>
	</div>
<% end%>
